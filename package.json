{
  "name": "sqe",
  "description": "Scripta Qumranica Electronica - Digital Tools for the Dead Sea Scrolls",
  "version": "0.1.1",
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "karma start --config karma.conf.js --browsers=Chrome --single-run",
    "prettier": "prettier --config ./.prettierrc.yml --write ./{tests,gstsrc}/**/*.{js,vue}",
    "dev": "webpack --config webpack.dev.js",
    "prod": "webpack --config webpack.prod.js",
    "start": "node ./tools/dev_server.js",
    "setup:db": "sh ./bin/init-docker.sh",
    "test": "karma start --config karma.conf.js",
    "test:chrome": "karma start --config karma.conf.js --browsers=Chrome",
    "test:ci": "npm run test:travis && npm run test:server",
    "test:travis": "cross-env BABEL_ENV=test ./node_modules/.bin/karma start --single-run --config karma.conf.js --browsers=Chrome,Firefox",
    "posttest:travis": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:server": "mocha ./tests/server/**/*-test.js --timeout=120000 --watch"
  },
  "lint-staged": {
    "src/**/*.(js|vue)": [
      "npm run prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.10",
    "app": "file:./tools",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.17",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "es5-shim": "^4.5.10",
    "es6-shim": "^0.35.3",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "faker": "^4.1.0",
    "file-loader": "^1.1.11",
    "husky": "^0.14.3",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sinon-chai": "^1.3.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^2.0.9",
    "lint-staged": "^7.0.4",
    "mocha": "^5.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "node-sass": "^4.7.2",
    "phantomjs-prebuilt": "^2.1.16",
    "resolve-url-loader": "^2.3.0",
    "sass-loader": "^6.0.6",
    "sass-resources-loader": "^1.3.2",
    "sinon": "^4.2.2",
    "sinon-chai": "^2.14.0",
    "style-loader": "^0.19.1",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "url-loader": "^1.0.1",
    "vue-loader": "^13.7.0",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^3.10.0",
    "webpack-build-notifier": "^0.1.22",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.1",
    "webpack-notifier": "^1.5.1"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "body-parser": "^1.18.2",
    "element-ui": "^2.0.11",
    "immutable": "^3.8.2",
    "prettier": "^1.12.0",
    "quill": "^1.3.6",
    "rematrix": "^0.2.2",
    "supertest": "^3.0.0",
    "uuid": "^3.2.1",
    "vue": "^2.5.13",
    "vue-router": "^3.0.1",
    "vue-splitpane": "^1.0.2",
    "vuex": "^3.0.1",
    "vuex-persist": "^1.1.1"
  }
}
