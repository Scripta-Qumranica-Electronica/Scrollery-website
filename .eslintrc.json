{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "curly": [
            "warn",
            "all"
        ],
        "no-var": ["error"],
        "prefer-const": ["warn"],
        "no-use-before-define": ["error", "nofunc"],
        "comma-dangle": ["error", "always"],
        "no-console": ["off"]
    }
}